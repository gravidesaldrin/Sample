<div class="fields form-group form-inline">
  <div class="input-group col-sm-9">
    <%= f.text_field :content, class: "form-control", placeholder: "Content" %>
  </div>
  <%= f.hidden_field :id %>
  <%= f.hidden_field :_destroy, class: "removable" %>
  <%= link_to_remove_fields t(".remove"), f, "btn btn-danger" %>
  <div> &nbsp; </div>
  <%= label_tag "Answer" %>
  <%= f.fields_for :word_answers do |builder| %>
    <%= render "word_answer_fields", f: builder %>
  <% end %>
  <div class = "form-group" align = "right">
      <div class = "added-word_answer"></div>
      <%= link_to_add_fields "+", f, :word_answers,
        "btn btn-primary add-remove-word_answer", "Answer" %>
  </div>
</div>
